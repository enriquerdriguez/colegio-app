<%= form_for(obj, :html => {multipart: true, class: "form-horizontal", role: "form"}) do |f|  %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your email" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Enter your password" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Repeat your password" %>
  </div>

  <div class="form-group">
    <label for="exampleInputEmail1">Name</label>
    <%= f.text_field :first_name, class: "form-control", placeholder: "Enter your name", autofocus: true  %>
    <small id="emailHelp" class="form-text text-muted">We'll never share your name with anyone else.</small>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Last Name</label>
    <%= f.text_field :last_name, class: "form-control", placeholder: "Enter your last name"  %>
    <small id="emailHelp" class="form-text text-muted">We'll never share your last name with anyone else.</small>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Birthdate</label>
    <%= f.date_select :birthdate, {
        order: [:month, :day, :year],
        prompt: { day: 'Select day', month: 'Select month', year: 'Select year' },
        start_year: Date.today.year, end_year: Date.today.year - 60},
                      { class: "form-control"} %>
    <%#= datetime_select(obj, :birthdate, start_year: 1980)  %>
  </div>
  <div class="form-group">
    <label for="course">Course </label>
    <%= f.select :course_id,  Course.all.collect {|c| [ c.name + " " + c.level, c.id ] }, { include_blank: true, required: true }, class: "form-control" %>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Email</label>
    <%= f.email_field :email, class: "form-control", placeholder: "Enter your email"  %>
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
  <div class="form-group">
    <label for="telephone">Telephone</label>
    <%= f.text_field :telephone, class: "form-control", placeholder: "Enter your telephone number" %>
  </div>
  <div class="form-group">
    <label for="picture">Profile Picture</label>
    <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png', class: "form-control" %>
  </div>

  <%= f.submit class: "btn btn-primary btn-lg" %>
<% end %>