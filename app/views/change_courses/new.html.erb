<div class="row">
  <h3>Current course:
    <% if !@student.course.nil? %>
    <%= @student.course.name + " " + @student.course.level %>
    <% end %>
  </h3>
  <div class="col-md-offset-3"></div>
  <div class="col-md-6">
    <table class="table table-striped">
      <thead>
      <th>Course</th>
      <th>Level</th>
      <th>Action</th>
      </thead>
      <tbody>
      <%@courses.each do |course| %>
        <% if course != @course %>
          <tr>
            <td><%= course.name %></td>
            <td><%= course.level %></td>
            <td>
              <%= link_to "Change to this Course", student_change_courses_path(student_id: @student.id, course_id: course.id), class: "btn btn-primary btn-sm", method: :post %>
            </td>
          </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>
  </div>
</div>