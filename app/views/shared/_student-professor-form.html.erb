<%= form_for(obj, :html => {multipart: true, class: "form-horizontal", role: "form"}) do |f|  %>
  <div class="form-group">
    <label for="exampleInputEmail1">Name</label>
    <%= f.text_field :first_name, class: "form-control", placeholder: "Enter your name", autofocus: true  %>
    <small id="emailHelp" class="form-text text-muted">We'll never share your name with anyone else.</small>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Last Name</label>
    <%= f.text_field :last_name, class: "form-control", placeholder: "Enter your last name"  %>
    <small id="emailHelp" class="form-text text-muted">We'll never share your last name with anyone else.</small>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Birthdate</label>
    <%= f.date_select :birthdate, {
        order: [:month, :day, :year],
        prompt: { day: 'Select day', month: 'Select month', year: 'Select year' },
        start_year: Date.today.year, end_year: Date.today.year - 60},
    {required: true} %>
    <%#= datetime_select(obj, :birthdate, start_year: 1980)  %>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Email</label>
    <%= f.email_field :email, class: "form-control", placeholder: "Enter your email"  %>
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
  <div class="form-group">
    <label for="telephone">Telephone</label>
    <%= f.text_field :telephone, class: "form-control", placeholder: "Enter your telephone number" %>
  </div>
  <div class="form-group">
    <label for="picture">Profile Picture</label>
    <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
  </div>

  <%= f.submit class: "btn btn-primary btn-lg" %>
<% end %>