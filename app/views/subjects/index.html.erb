<h2>Subjects</h2>
<%= link_to "Create Subject", new_subject_path, class: "btn btn-success btn-md" %>
<div class="row" style="margin-top: 2.5em;">
  <table class="table table-striped table-responsive">
    <thead>
      <th>Name</th>
      <th>Actions</th>
    </thead>
    <tbody>
      <% @subjects.each do |subject| %>
      <tr>
        <td><h4><%= subject.name %></h4></td>
        <td>
          <%= link_to "Edit Subject", edit_subject_path(subject), class: "btn btn-primary btn-sm" %>
          <%= link_to "Delete Subject", subject_path(subject),method: :delete, data:{confirm: "Are you sure?"}, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
